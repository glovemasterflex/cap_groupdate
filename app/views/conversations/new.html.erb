<div class='container'>
    <h1>New Conversation</h1>
    <hr />

    <%= form_tag conversations_path, method: :post do %>
      <div class='col s3'>
        <%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :name), class: 'input-field blue-text' %>
      </div>

      <div>
        <%= text_field_tag :subject, nil, placeholder: "Subject" %>
      </div>

      <div>
        <%= text_area_tag :body, nil, placeholder: "Leave a comment", id: "textarea1", class: "materialize-textarea" %>
      </div>

      <%= submit_tag %>

    <% end %>
</div>